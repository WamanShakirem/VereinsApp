<Window x:Class="VereinsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VereinsApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="197*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,46,0,268" Grid.ColumnSpan="2"/>
        <Label Content="Mitglieder" HorizontalAlignment="Left" Margin="8,17,0,0" VerticalAlignment="Top" RenderTransformOrigin="-4.053,-8.704"/>
        <TextBox HorizontalAlignment="Left" Margin="596,21,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>
        <Button Content="Mitglied hinzufügen" HorizontalAlignment="Left" Margin="25,379,0,0" VerticalAlignment="Top" Width="127" Click="Button_Click"/>
        <Button Content="Mitglied bearbeiten" HorizontalAlignment="Left" Margin="151,379,0,0" VerticalAlignment="Top" Width="127" Click="Button_Click"/>
        <Button Content="Mitglied löschen" HorizontalAlignment="Left" Margin="277,379,0,0" VerticalAlignment="Top" Width="127" Click="Button_Click"/>
        <TextBox HorizontalAlignment="Left" Margin="25,196,0,0" TextWrapping="Wrap" Text="Betreff" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Margin="26,219,0,0" TextWrapping="Wrap" Text="Nachricht" VerticalAlignment="Top" Width="570" Height="129"/>
        <Button Content="Senden" HorizontalAlignment="Left" Margin="470,352,0,0" VerticalAlignment="Top" Width="126" Click="Button_Click"/>
        <Label Content="E-Mail an alle Mitglieder senden" HorizontalAlignment="Left" Margin="20,167,0,0" VerticalAlignment="Top" RenderTransformOrigin="-4.053,-8.704"/>
        <Label Content="Suchen" HorizontalAlignment="Left" Margin="547,16,0,0" VerticalAlignment="Top" RenderTransformOrigin="-4.053,-8.704"/>
        <Button Content="Los" HorizontalAlignment="Left" Margin="723,20,0,0" VerticalAlignment="Top" Width="43" Click="Button_Click"/>
    </Grid>
</Window>
